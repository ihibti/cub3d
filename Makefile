# Create object directories
$(OBJS_DIR) $(OBJ_SUBDIRS):
	@mkdir -p $@

-include $(DEPS)

$(OBJS_DIR)/%.o: $(SRCS_DIR)/%.c | $(OBJ_SUBDIRS)
	@printf "$(LBLUE)[Compilation]$(RESET) In progress... $(GREEN)$<" && \
	$(CC) $(CFLAG) -I$(HEADERS) -I$(MLXDIR) -c $< -o $@ && \
	printf "\r$(LBLUE)[Compilation]$(RESET) Completed   ... $(GREEN)$<" && \
	printf "\n"

clean:
	@make clean -C ${LIBFTDIR}
	@make clean -C ${MLXDIR}
	@rm -rf $(OBJS_DIR)

fclean: clean
	@make fclean -C ${LIBFTDIR}
	@rm -f $(NAME)

re: fclean all

run : ${NAME}
	@./${NAME}

val : ${NAME}
	@ valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes ./${NAME} map.cub

.PHONY: all clean fclean re val run

# **************************************************************************** #
#                                   COLORS                                     #
# **************************************************************************** #

GREEN   := \033[38;5;76m
RED     := \033[38;5;160m
YELLOW  := \033[38;5;226m
ORANGE  := \033[38;5;202m
PURPLE  := \033[38;5;213m
LBLUE   := \033[38;5;51m
BLUE    := \033[38;5;117m
INDI    := \033[38;5;99m
RESET   := \033[00m